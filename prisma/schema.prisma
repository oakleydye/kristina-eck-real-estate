generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Float
  bedrooms    Int
  bathrooms   Float
  sqft        Int
  address     String
  city        String
  state       String
  zipCode     String
  propertyType String
  status      String   @default("available")
  images      String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ContactInquiry {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  message   String
  propertyId String?
  createdAt DateTime @default(now())
}

model TeamMember {
  id          String   @id @default(cuid())
  name        String
  role        String
  bio         String
  email       String
  phone       String
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
